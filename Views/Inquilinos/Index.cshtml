@model IEnumerable<Brianzo_Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Listado de Inquilinos";
}

<h2>Listado de Inquilinos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo inquilino</a>
</p>


@if (TempData["creado"] != null)
{
    <div class="alert alert-success" role="alert">
        Inquilino Creado Exitosamente
    </div>
}

@if (TempData["eliminado"] != null)
{
    <div class="alert alert-danger" role="alert">
        Inquilino Eliminado Exitosamente
    </div>
}

@if (TempData["editado"] != null)
{
    <div class="alert alert-warning" role="alert">
        Inquilino Editado Exitosamente
    </div>
}


<div class="card">
    <div class="card-header">
        Listado de Inquilinos
    </div>
    <div class="card-body">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdInquilino"
                                    title="Editar">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdInquilino"
                                    title="Detalle">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdInquilino"
                                    title="Eliminar">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdInquilino"
                                    title="Eliminar">
                                <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
