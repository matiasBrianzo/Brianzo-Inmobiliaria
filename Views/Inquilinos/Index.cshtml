@model IEnumerable<Brianzo_Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Listado de Inquilinos";
}


<h1>
	Listado de Inquilinos
	<div class="btn-group pull-right">
		<a class="btn btn-primary" asp-action="Create" title="Crear nuevo inquilino"><i class="fa-solid fa-plus"></i></a>
	</div>
</h1>
@if (TempData["creado"] != null)
{
    <div class="alert alert-success" role="alert">
        Inquilino Creado Exitosamente
    </div>
}

@if (TempData["eliminado"] != null)
{
    <div class="alert alert-danger" role="alert">
        Inquilino Eliminado Exitosamente
    </div>
}

@if (TempData["editado"] != null)
{
    <div class="alert alert-warning" role="alert">
        Inquilino Editado Exitosamente
    </div>
}


<div class="card">
    <div class="card-header">
        Listado de Inquilinos
    </div>
    <div class="card-body">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id_Inquilino"
                                    title="Editar">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id_Inquilino"
                                    title="Detalle">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                  @if(User.IsInRole("Administrador")){
                                  <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_Inquilino"
                                    title="Eliminar">
                                    <i class="fa-solid fa-trash-can"></i>
                                  </a> 
                                }                               
                                  <a class="btn btn-info" asp-controller="Contratos" asp-action="ContratosPorInquilino"  asp-route-id="@item.Id_Inquilino"
                                    title="Ver Contratos">
                                   <i class="fa-solid fa-file"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
