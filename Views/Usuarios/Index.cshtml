@model IEnumerable<Brianzo_Inmobiliaria.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h2>Lista de Usuarios</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo Usuario</a>
</p>


@if(TempData["creado"] !=  null){
    <div class="alert alert-success" role="alert">
    Usuario Creado Exitosamente
    </div>
}


@if(TempData["eliminado"] !=  null){
<div class="alert alert-danger" role="alert">
    Usuario Eliminado Exitosamente
</div>
}

@if(TempData["editado"] !=  null){
<div class="alert alert-warning" role="alert">
    Usuario Editado Exitosamente
</div>
}

@if(TempData["Otro"] !=  null){
<div class="alert alert-danger" role="alert">
    @TempData["Otro"]
</div>
}

<div class="card">
  <div class="card-header">
    Lista de Usuarios

  </div>
  <div class="card-body">
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td>
                <img src="@(item.Avatar == ""?"/Uploads/av1.jpg":item.Avatar)" class="rounded-circle" style="width: 30px;height: 30px;" alt="Avatar" />
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id_Usuario}, new { @class="btn btn-warning"}) |
                @Html.ActionLink("Detalles", "Details", new { id=item.Id_Usuario}, new { @class="btn btn-info"}) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Usuario }, new { @class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>


  </div>
</div>


